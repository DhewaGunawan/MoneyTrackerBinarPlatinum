<resources>
    <!-- Base application theme. -->
    <style name="Theme.BINARCHPLATINUM" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Button color. -->
        <item name="colorButtonNormal">@color/light_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Home.Tablayout" parent="TextAppearance.Design.Tab">
        <item name="tabSelectedTextColor">@color/light_grey</item>
        <item name="tabTextColor">@color/dark_grey</item>
    </style>

    <style name="Home.Tablayout.Text" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>